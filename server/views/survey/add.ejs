<% include ../partials/header.ejs %>

<% include ../partials/main_nav.ejs %>
<script>datePickerId.min = new Date().toISOString().split("T")[0];</script>
<!-- Content for the Add page -->
<div class="container add_page">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Survey Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter a brief description of the survey"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="startTimeField">Set survey start day</label>
                    <input type="date" id="datePickerId" name="startTime" required />
                </div>

                <div class="form-group">
                    <label for="endTimeField">Set survey end day</label>
                    <input type="date" id="datePickerId" name="endTime" required />
                </div>
                
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit" id="create_survey">
                    <i class="fas fa-edit"></i> Add questions to survey</button>

                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                </div>
                
            </form>
        </div>
    </div>
</div>


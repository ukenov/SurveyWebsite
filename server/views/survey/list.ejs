<% include ../partials/header.ejs %>

<% include ../partials/main_nav.ejs %>

  <!-- Main content -->
  <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Surveys</h1>
          <p class="lead text-muted">Welcom to our website. Here you can create your own surveys or respond to any survey. Also you can edit survey that you created or delete if you no longer need it</p>
          <p>
            <a href="/survey-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Create a Survey</a>
          </p>
        </div>
  </section>

  <div class="container">
      <div class="row">

            <!-- Repeatable Template -->
            <% for(let count = 0; count < SurveyList.length; count++) { %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22288%22%20height%3D%22226%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20288%20226%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_175c3c38c21%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_175c3c38c21%22%3E%3Crect%20width%3D%22288%22%20height%3D%22226%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2296.8203125%22%20y%3D%22119.24375%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
                <div class="card-body">
                  <h3 class="card-text"><%= SurveyList[count].name %></h3> 
                  <p class="card-text"><%= SurveyList[count].description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a href="/survey-list/start/<%= SurveyList[count]._id %>"><button type="button" class="btn btn-sm btn-outline-secondary">Start</button></a>
                      <% if((typeof displayName == 'string' && displayName) && (SurveyList[count].user_id == _id)) { %>
                        <a href="/survey-list/edit/<%= SurveyList[count]._id %>"><button type="button" class="btn btn-sm btn-outline-secondary">Edit</button></a>
                        <a href="/survey-list/delete/<%= SurveyList[count]._id %>"><button type="button" class="btn btn-sm btn-outline-secondary btn-danger">Delete</button></a>
                      <% } %>
                    </div>
                    
                    <small class="text-muted"><%= SurveyList[count].end_time %></small>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
        
    </div>
  </div>

<% include ../partials/bottom_nav.ejs %>

<% include ../partials/footer.ejs %>

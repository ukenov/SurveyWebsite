<% include ../partials/header.ejs %>

<% include ../partials/main_nav.ejs %>

<!-- Content for the Edit page -->
<div class="container questions_page">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h3 class="col h1 text-warning font-weight-bold text-center pt-5 pb-2"><%= title %></h3>
            <hr class="pt-3" >
            <form class="form" method="POST">
                <label class=" h4 font-weight-bold pb-2" for="nameTextField ">Questions</label>   
            <div class="form-group row">
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputQuestion" placeholder="Question" name="question" value="<%= question.question %>" required>
                        </div>
                        
                        <select class="custom-select col-sm-3 col-form-control" id="inputGroupSelect" name="type" required>
                            <option selected value="">Question type</option>
                            <% if(question.type == "Multiple") { %>
                                <option value="Multiple" selected>Multiple choice</option>
                                <option value="Agree/Disagree">Agree/Disagree</option>
                                <option value="Short">Short Awnser</option>
                            <% } else if(question.type == "Agree/Disagree") { %>
                                <option value="Multiple">Multiple choice</option>
                                <option value="Agree/Disagree"  selected>Agree/Disagree</option>
                                <option value="Short">Short Awnser</option>
                            <% } else if(question.type == "Short") { %>
                                <option value="Multiple">Multiple choice</option>
                                <option value="Agree/Disagree"  selected>Agree/Disagree</option>
                                <option value="Short" selected>Short Awnser</option>
                            <% } %>
                            
                        </select>
                    </div>

                    <div id="options">
                        <ul>
                            <li>
                                <input type="text" class="form-control"
                                id="first"
                                placeholder="First Option"
                                name="first"
                                value="<%= question.first %>">
                            </li>
                            <br>
                            <li>
                                <input type="text" class="form-control"
                                id="second"
                                placeholder="Second Option"
                                name="second"
                                value="<%= question.second %>">
                            </li>
                            <br>
                            <li>
                                <input type="text" class="form-control"
                                id="third"
                                placeholder="Third Option"
                                name="third"
                                value="<%= question.third %>">
                            </li>
                            <br>
                            <li>
                                <input type="text" class="form-control"
                                id="fourth"
                                placeholder="Fourth Option"
                                name="fourth"
                                value="<%= question.fourth %>">
                            </li>
                        </ul>
                    </div>

                    <div class="font-weight-bold form-control-lg" id="addQuestion">
                        <button class="btn btn-primary btn-lg px-4" id="addNewQuestion" type="submit">
                        <i class="fas fa-plus-square"></i> Save</button>
                    
                        <a href="/survey-list/questions" class="btn btn-warning btn-lg px-4">
                            Cancel</a>
                    </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/bottom_nav.ejs %>

<% include ../partials/footer.ejs %>




 